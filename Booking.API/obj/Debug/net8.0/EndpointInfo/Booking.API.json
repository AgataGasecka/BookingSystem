{
  "openapi": "3.0.1",
  "info": {
    "title": "Booking.API",
    "version": "1.0"
  },
  "paths": {
    "/event/{id}": {
      "get": {
        "tags": [
          "EventEndpoints"
        ],
        "summary": "Gets a specific event by its id ",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/event/getFiltered": {
      "get": {
        "tags": [
          "EventEndpoints"
        ],
        "summary": "Filter events by category and date range",
        "parameters": [
          {
            "name": "Category",
            "in": "query",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/EventCategory"
            }
          },
          {
            "name": "From",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "To",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Event"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpValidationProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/event": {
      "post": {
        "tags": [
          "EventEndpoints"
        ],
        "summary": "Add new event",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateEventRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpValidationProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/event/{id}/getReport": {
      "get": {
        "tags": [
          "EventEndpoints"
        ],
        "summary": "Get sales report about event",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SalesReport"
                }
              }
            }
          }
        }
      }
    },
    "/reservation": {
      "post": {
        "tags": [
          "ReservationEndpoint"
        ],
        "summary": "Add new reservation for event",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateReservationRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpValidationProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateEventRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "announcementDate": {
            "type": "string",
            "format": "date-time"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "category": {
            "$ref": "#/components/schemas/EventCategory"
          },
          "ticketPrice": {
            "type": "number",
            "format": "double"
          },
          "totalTickets": {
            "type": "integer",
            "format": "int32"
          },
          "availableTickets": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "CreateReservationRequest": {
        "type": "object",
        "properties": {
          "eventId": {
            "type": "integer",
            "format": "int32"
          },
          "ownerName": {
            "type": "string",
            "nullable": true
          },
          "numberOfTickets": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "Event": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "rowVersion": {
            "type": "string",
            "format": "byte",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "announcementDate": {
            "type": "string",
            "format": "date-time"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "category": {
            "type": "string",
            "nullable": true
          },
          "ticketPrice": {
            "type": "number",
            "format": "double"
          },
          "totalTickets": {
            "type": "integer",
            "format": "int32"
          },
          "availableTickets": {
            "type": "integer",
            "format": "int32"
          },
          "reservations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Reservation"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EventCategory": {
        "enum": [
          "Music",
          "Sport",
          "Cinema",
          "Party",
          "Art"
        ],
        "type": "string"
      },
      "HttpValidationProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "Reservation": {
        "type": "object",
        "properties": {
          "reservationId": {
            "type": "integer",
            "format": "int32"
          },
          "eventId": {
            "type": "integer",
            "format": "int32"
          },
          "numberOfTickets": {
            "type": "integer",
            "format": "int32"
          },
          "ownerName": {
            "type": "string",
            "nullable": true
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "reservationDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "SalesReport": {
        "type": "object",
        "properties": {
          "salesReportDictionary": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/SalesReportRow"
            },
            "nullable": true
          },
          "totalAmountSum": {
            "type": "number",
            "format": "double"
          },
          "totalNumberOfSoldTickets": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "SalesReportRow": {
        "type": "object",
        "properties": {
          "dailyAmountsSum": {
            "type": "number",
            "format": "double"
          },
          "dailyNumberOfSoldTickets": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}